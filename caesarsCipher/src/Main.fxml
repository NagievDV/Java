<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextArea?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="MainController" style="-fx-background-color: #0d1b21;">
    <children>
        <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="400.0" prefWidth="400.0" spacing="10.0">
        <!-- RadioButtons -->
        <HBox alignment="CENTER" spacing="10.0">
            <RadioButton fx:id="rbEncrypt" text="Encrypt" style="-fx-text-fill: lightgray;"/>
            <RadioButton fx:id="rbDecrypt" text="Decrypt" style="-fx-text-fill: lightgray;"/>
            <RadioButton fx:id="rbBruteforceDecrypt" text="Bruteforce" style="-fx-text-fill: lightgray;"/>
            <RadioButton fx:id="rbStatisticDecrypt" text="Statistic" style="-fx-text-fill: lightgray;"/>
        </HBox>

        <Label
                fx:id="lbFilePath"
                layoutX="20.0"
                layoutY="30.0"
                prefWidth="300.0"
                style="
                    -fx-border-color: black;
                    -fx-border-width: 2;
                    -fx-border-radius: 5;
                    -fx-text-fill: lightgray;"
        />
        <Button text="Выбрать"
                layoutX="330.0"
                layoutY="30.0"
                onAction="#handleChooseFile"
                style="-fx-background-color: gray; -fx-text-fill: white;" />
        <TextArea fx:id="taResult"
                  wrapText="true"
                  prefHeight="200.0"
                  prefWidth="350.0"
                  editable="false"
                  style="-fx-border-color: black;
                 -fx-border-width: 2;
                 -fx-background-color: #2c3e50;"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Button text="Обработать"
                        onAction="#handleProcess"
                        style="-fx-background-color: gray; -fx-text-fill: white;" />
                <Button text="Сохранить"
                        onAction="#handleSave"
                        style="-fx-background-color: gray; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
